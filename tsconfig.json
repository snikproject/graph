{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"outDir": "target",
		"lib": ["es2020", "dom", "dom.iterable", "esnext"],
		"target": "esnext",
		"allowSyntheticDefaultImports": true,
		"typeRoots": ["./node_modules/@types"],
		"module": "esnext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noImplicitAny": false,
		"noEmitOnError": false,
		"noEmit": false,
		"strict": false
	},
	"include": ["js/**/*", "globals.d.ts"],
	"exclude": ["node_modules"]
}
